<div class="container">
<% if !flash[:notice].blank? %>
   <div>
      <%= flash[:notice] %>
   </div>
<% end %>

<br>

<%= link_to "New docx file", new_input_doc_path %>
<br>
<br>

<table border="3">
   <thead>
      <tr>
         <th>File Name</th>
         <th>Download Docx</th>
         <th>Download CSV</th>
         <th>Action</th>
      </tr>
   </thead>

   <tbody>
      <% @input_docs.each do |input_doc| %>

         <tr>
            <td><%= input_doc.name %></td>
            <td><%= link_to "Download", input_doc.attachment_url %></td>
            <td><%= link_to "CSV", "#{input_doc.attachment_url}.csv" %></td>
            <td><%= link_to "Delete",  input_doc, method: :delete %>
            </td>
         </tr>

      <% end %>
   </tbody>

</table>
</div>
