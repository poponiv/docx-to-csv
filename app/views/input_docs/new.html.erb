<div class="container">
<% if !@input_doc.errors.empty? %>
   <div>
      <ul>
         <% @input_doc.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
         <% end %>      </ul>
   </div>
<% end %>

<div>
   <%= form_for @input_doc, html: { multipart: true } do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <br><br>
      <%= f.label :attachment %>
      <%= f.file_field :attachment %>
      <br>
      <%= f.submit "Save" %>
   <% end %>
</div>
</div>